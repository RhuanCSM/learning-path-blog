<h1>Blog do Rhuan</h1>
<% @blog_posts.each do |blog_post| %>
  <div>
    <h2><%= link_to blog_post.title, blog_post %></h2>
    <%if blog_post.draft?%>
      <span class="p-2 rounded bg-gray-100 text-gray-900">Draft</span>
    <%elsif blog_post.scheduled?%>
      <span class="p-2 rounded bg-blue-100 text-gray-900">Scheduled</span>
    <%end%>
    <p><%= blog_post.content %></p>
  </div>
  <hr>
<% end %>
<h2><%= link_to "Create new post", new_blog_post_path %></h2> 

